<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<% if (Object.entries(htmlData).length > 0) { %>
  <%- htmlData %>
<% } else { %>
  <p class="notice">Sorry, no matching vehicle could be found.</p>
<% } %>

<% if (loggedin) { %>
  <a href="/reviews/add/<%= vehicle.inv_id %>">Add a Review</a>
<% } %>

<% if (reviews && reviews.length > 0) { %>
  <h3>Customer Reviews</h3>
  <ul>
    <% reviews.forEach(review => { %>
      <li>
        <p><%= review.review_text %></p>
        <small>by <%= review.account_firstname %></small>
        <% if (review.account_id === account_id) { %>
          <a href="/reviews/edit/<%= review.review_id %>">Edit</a> |
          <a href="/reviews/delete/<%= review.review_id %>">Delete</a>
        <% } %>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No reviews yet.</p>
<% } %>